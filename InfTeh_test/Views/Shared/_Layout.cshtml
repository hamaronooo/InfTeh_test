<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/Content/ico/siteicon.ico")" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom-js")
    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/custom-css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-top: 4.5rem;">
@Html.Action("GetModal", "Modal")
@Html.Action("Partial_ToastContainer", "Toast")
<script>
    $(document).ready(function () {
        $('.nav-link-collapse').on('click', function () {
            $('.nav-link-collapse').not(this).removeClass('nav-link-show');
            $(this).toggleClass('nav-link-show');
        });
    });
</script>
<nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
    @Html.Partial("_PartialHeader")
</nav>
<div class="">@RenderBody()</div>

    @RenderSection("scripts", required: false)
</body>
</html>
