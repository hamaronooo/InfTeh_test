<script>
    function createFolderForm() {
        $('#createFolderForm').remove();
        $.ajax({
            type: "GET",
            url: "@Url.Action("_PartialCreateFolderForm", "Folder")",
            data: {
                parent_folder: getParentFolderID()
            },
            success: function (html) {
                if (selectedElement != null) {
                    selectedElement.next().prepend(html);
                }
                else {
                    $('#navAccordion').prepend('<li>'+html+'</li>');
                }
            }
        });
    }

    function loadIconCreateForm() {
        showPreloader();
        $.ajax({
            type: "GET",
            url: "@Url.Action("_PartialIconCreateForm", "FileExtension")",
            success: function (html) {
                $('#ModalBody').html(html);
            }
        }).always(function() {
            hidePreloader();
        });
    }
</script>
