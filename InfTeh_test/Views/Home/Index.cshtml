@model InfTeh_test.Models.DataContext.Folder
@{
    ViewBag.Title = "Explorer";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="mx-4 p-2">
    <div id="explorer_wrapper">
        <div class="row bg-light border rounded-top mb-3" id="explorer_header_container">
            <div class="col-12" id="explorer_header_path"></div>
        </div>
        <div class="row rounded-bottom p-0">
            <div class="col-12 col-md-8 p-0 order-sm-last order-md-first" id="explorer_content_container">
            </div>
            <div class="col-12 col-md-4 order-sm-first order-md-last" id="explorer_filedrop_container">
                @Html.Action("_PartialFiledrop", "Upload", new{ mode = 1 })
            </div>
        </div>
    </div>
</div>

<script>
    function showProjectInfo() {
        $('#explorer_content_container').load('/Home/_PartialProjectInfo');
    }
</script>